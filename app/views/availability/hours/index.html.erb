<script type="text/javascript">
jQuery(document).ready(function () {
    getServiceHours({ <%= service.code %>>: '#destination' });
});
</script>

<h1><%= h service.name %></h1>

<p id="destination"></p>

<h2>Upcoming Regular Hours</h2>
<p><a href="#myModal" data-toggle="modal" class="btn">New Hours</a></p>

<table class="table">
 <tr>
   <th>Name</th>
   <th>Active Dates</th>
   <th>Hours</th>
   <th></th>
 </tr>
<% @service.upcoming_regular_hours.each do | hours | %>
  <% hours = Availability::HoursPresenter.new(hours, self) %>
 <tr>
   <td><%= h hours.name %></td>
   <td><%= hours.start_date.to_date.to_s(:long_ordinal) %> - <%=  hours.end_date.to_date.to_s(:long_ordinal) %></td>
   <td>
     <%= raw hours.render %>
   </td>
   <td>
     <a href="#" class="btn btn-primary">Edit</a>
     <a href="#" class="btn btn-primary">Delete</a>
   </td>
 </tr>
<% end %>
</table>


