<% breadcrumb([link_to('Service Points', availability_service_points_path)]) %>

<% content_title("Create Service Point") %>
<div style="margin-top: 25px; margin-left: 60px;">
<%= simple_form_for @service_point,
  :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :code, :label => "Code", :input_html => { :id => "code_text", :class => "span6" } %>
  <%= f.input :name, :label => "Name", :input_html => { :id => "name_text", :class => "span6" } %>
  <%= f.association :building, :label => "Related Building", :input_html => { :class => "span6" } %>
  <%= f.input :notification_emails, :label => "Notification Email(s)", :input_html => { :style => "height: 50px;" } %>
  <%= f.input :unit_id, :label => "Unit ID" %>
  <%= f.input :primary_contact_netid, :label => "Contact Netid" %>
  <%= f.input :primary_email, :label => "Service Point Email" %>
  <%= f.input :primary_phone, :type => :string, :input_html => { :style => "height: 28px;" }, :label => "Service Point Phone" %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary'%>
  </div>
<% end %>
</div>

