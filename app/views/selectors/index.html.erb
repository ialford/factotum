<% content_for(:content_title, raw("<h1>Selectors</h1>")) %>

<div>
  <%= link_to 'Add New Selector', new_selector_path(), :class => 'btn' %>
</div>
<br>
<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Monographic Form</th>
    <th>Just Say Yes Form</th>
    <th>Admin</th>
  </tr>
  </thead>
  <tbody>
  <% @selectors.each do |selector| %>
    <tr>
      <td><%= link_to(selector.last_first, edit_selector_path(selector)) %></td>
      <td><%= selector.monographic? ? "Yes" : "No" %></td>
      <td><%= selector.just_say_yes? ? "Yes" : "No" %></td>
      <td><%= selector.admin? ? "Yes" : "No" %></td>
    </tr>
  <% end %>
  </tbody>
</table>