<% content_for(:right_column) do %>
  <h3>Call Number Ranges</h3>
  <p>
    <%= link_to "Add Regular Hours", new_maps_map_file_map_call_number_range_path(@map_file), class: "btn" %>
  </p>
  <ul>  
  <% @map_file.map_call_number_ranges.each do | range | %>
    <li><%= link_to "#{range.begin_call_number} - #{range.end_call_number}", edit_maps_map_file_map_call_number_range_path(range.map_file, range)%></li>
  <% end %>
  </ul>  
<% end %>

<h1><%= @map_file.name %></h1>
  
  <h4>Fun Spot</h4>
  <p>Click on the highlighted section for more information</p>
  <div class="imageSub" style="width: 254px; height: 198px;"> <!-- Put Your Image Width -->
    <%= image_tag @map_file.file.url %>
    <div class="blackbg"></div>
    <a href="http://www.google.com" target="_blank" id="overimage" class="label popover_link" data-content="funnest spot in the whole library system" data-original-title="fun spot"></a>
    <a href="http://www.yahoo.com"  target="_blank" id="overimage2" class="label2 popover_link" data-content="2nd funnest spot in the whole library system" data-original-title="Another fun spot"></a>
  </div>

<style>
  div.imageSub { position: relative; }
  div.imageSub img { z-index: 1; }
  div.blackbg {
    width: 100%;
    height: 100%;
