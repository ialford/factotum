<% breadcrumb([link_to('Buildings', maps_buildings_path), link_to(h("#{@floor_map.building.name} Floor Maps"), maps_building_floor_maps_path(@floor_map.building)), "Edit #{@floor_map.name}"]) %>

<h1>Edit <%= h @floor_map.name %></h1>

<%= simple_form_for @floor_map, :url => maps_building_floor_map_path(@floor_map.building, @floor_map), :html => { } do |f| %>
  <%= render :partial => 'form', :locals => { f: f } %>
<% end %>

<div class="pull-right">
  <%= button_to "Delete", maps_building_floor_map_path(@floor_map.building, @floor_map), :class => 'btn-danger', :method => :delete, :confirm => "Are you sure you wish to delete these floor map: #{@floor_map.name}?" %>
</div>

