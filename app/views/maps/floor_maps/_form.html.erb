
<%= f.input(:name, :required => true) %>

<%= f.input(:search_code, :required => true) %>

<% if f.object.map.present? %>
  <h4>Current Image</h4>
  <%= image_tag f.object.map.url %>
  <%= f.input :map, :as => :file, :label => 'Replace Image File'  %>
<% else %>
  <%= f.input :map, :as => :file  %>
<% end %>

<div class="form-actions">
  <%= f.submit "Save", class: 'btn btn-primary' %>
</div>