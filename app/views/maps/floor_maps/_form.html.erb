
<%= f.input(:name, :required => true) %>

<%= f.input(:search_code, :required => true) %>

<%= f.input(:floor_number, :required => true) %>

<% if f.object.map.present? %>
  <h4>Current Image</h4>
  <%= image_tag f.object.map.url %>
  <%= f.input :map, :as => :file, :label => 'Replace Image File', :required => true %>
<% else %>
  <%= f.input :map, :as => :file, :required => true  %>
<% end %>

<div class="form-actions">
  <%= f.submit "Save", class: 'btn btn-primary' %>
  <%= link_to 'Cancel', maps_building_floor_maps_path(f.object.building), :class => 'btn' %>
</div>