<h1>Map Files for <%= h @building.name %></h1>

<p>
  <%= link_to 'New Map File', new_maps_building_floor_map_path(@building), class: "btn" %> 
</p>

<table class="table table-striped table-condensed">
 <thead>
 <tr>
   <th>Name</th>
   <th>Building</th>
   <th>Thumbnail</th>
 </tr>
 </thead>
 <tbody>
  <% @floor_maps.each do | mf | %>
    <tr>
      <td><%= link_to mf.name, maps_building_floor_map_path(mf.building, mf) %></td>
      <td><%= mf.building.name %></td>
      <td><%= image_tag mf.map.url(:thumb) %></td>
    </tr>
  <% end %>
 </tbody>
</table>

