<% monographic_order_header "Order Requests" %>
<% monographic_breadcrumb %>

<%= simple_form_for @search, as: :search, method: :get, html: {class: "form-inline"}, url: monographic_orders_path() do |f| %>
  <%= f.label :start_date, "From" %> <%= f.input_field :start_date, placeholder: "mm/dd/yyyy", class: "datefield" %> to <%= f.input_field :end_date, placeholder: "mm/dd/yyyy", class: "datefield" %>
  <%= f.button :submit, :value => "Search" %>
<% end %>
<%= paginate @monographic_orders %>
<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Title</th>
    <% if current_user.selector_admin? || !current_user.selector? %>
      <th>Selector</th>
    <% end %>
    <% if current_user.selector_admin? || current_user.selector? %>
      <th>Submitter</th>
    <% end %>
    <th>Date</th>
  </tr>
  </thead>
  <tbody>
  <% @monographic_orders.each do |order| %>
    <tr>
      <td><%= link_to(order.display_title, monographic_order_path(order)) %></td>
      <% if current_user.selector_admin? || !current_user.selector? %>
      <td><%= order.selector.name %></td>
    <% end %>
    <% if current_user.selector_admin? || current_user.selector? %>
      <td><%= order.creator.name %></td>
    <% end %>
      <td><%= l order.date, format: :us %></td>
    </tr>
  <% end %>
  </tbody>
</table>