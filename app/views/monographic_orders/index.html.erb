<% monographic_order_header "Order Requests" %>
<% monographic_breadcrumb %>

<%= paginate @monographic_orders %>
<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Title</th>
    <% if current_user.selector_admin? || !current_user.selector? %>
      <th>Selector</th>
    <% end %>
    <% if current_user.selector_admin? || current_user.selector? %>
      <th>Submitter</th>
    <% end %>
    <th>Date</th>
  </tr>
  </thead>
  <tbody>
  <% @monographic_orders.each do |order| %>
    <tr>
      <td><%= link_to(order.display_title, monographic_order_path(order)) %></td>
      <% if current_user.selector_admin? || !current_user.selector? %>
      <td><%= order.selector.name %></td>
    <% end %>
    <% if current_user.selector_admin? || current_user.selector? %>
      <td><%= order.creator.name %></td>
    <% end %>
      <td><%= order.display_date %></td>
    </tr>
  <% end %>
  </tbody>
</table>