				<div class="well">
					<ul class="nav nav-tabs nav-stacked">
						<li><%= link_to("Get Help", "http://library.nd.edu/asklib", target: :_blank) %></li>
						<li class="">My Support Requests</li>
					</ul>
				</div>
			</div>
		</div>

		<div class="nine columns">
			<div class="tab-content">
				<div class="tab-pane" id="profile">
						<div>
								<h2>My Profile</h2>
								<form class="simple_form form-horizontal" novalidate="novalidate" id="edit_directory_employee_601" action="/" accept-charset="UTF-8" method="post">
									<input name="utf8" type="hidden" value="✓">
									<input type="hidden" name="_method" value="patch">
									<input type="hidden" name="" value="">
									<div style="float:left;">
										<div class="control-group">
											<label class="control-label" for="name">Name</label>
											<div class="controls controls-row">
												<input type="text" value="<%= @patron.full_name %>" name="name" id="name" readonly>
											</div>
										</div>				
										<div class="control-group">
											<label class="control-label" for="netid">NetID</label>
											<div class="controls controls-row">
												<input type="text" value="<%= @patron.netid %>" name="netid" id="netid" readonly>
											</div>
										</div>				
										<div class="control-group">
											<label class="control-label" for="email">Email</label>
											<div class="controls controls-row">
												<input type="text" value="<%= @patron.email %>" name="email" id="email" readonly>
											</div>
										</div>				
										<div class="control-group">
											<label class="control-label" for="phone">Phone</label>
											<div class="controls controls-row">
												<input type="text" value="<%= @patron.phone_number %>" name="phone" id="phone" readonly>
											</div>
										</div>				
										<div class="control-group">
											<label class="control-label" for="address1">Address 1</label>
											<div class="controls controls-row">
												<input type="text" value="<%= @patron.address_1 %>" name="address1" id="address1" readonly>
											</div>
										</div>				
										<div class="control-group">
											<label class="control-label" for="address2">Address 2</label>
											<div class="controls controls-row">
												<input type="text" value="<%= @patron.address_2 %>" name="address2" id="address2" readonly>
											</div>
										</div>				
										<div class="control-group">
											<label class="control-label" for="status">Patron Status</label>
											<div class="controls controls-row">
												<input type="text" value="<%= @patron.status %>" name="status" id="status" readonly>
											</div>
										</div>				
										<div class="control-group">
											<label class="control-label" for="homeLibrary">Pickup Location</label>
											<div class="controls controls-row">
												<input type="text" value="<%= @patron.home_library %>" name="homeLibrary" id="homeLibrary">
											</div>
										</div>				
										<div class="control-group">
											<div class="form-actions">
												<input type="submit" name="commit" value="Update Profile" class="btn btn-primary">
												<a class="btn" href="#">Cancel</a>
											</div>
										</div>
									</div>
								</form>
							</div>
					</div>

				<div class="tab-pane active" id="available"><h2>Items available for pick up!</h2>
						<table class="table table-striped table-bordered no-table-hover table-condensed dataTable no-footer">
						  <tr>
							<th>Title</th>
<!-- 							<th>Author</th>  -->
							<th>Pickup Location</th>
							<th>Hold Date</th>
							<th>System</th>
						  </tr>
						<% @patron.hold_items.each do |item| %>
							<% if item[:on_hold_flag] %>
							  <tr>
								<td><%= item[:title] %></td>
<!-- 								<td><%= item[:author] %></td>  -->
								<td><%= item[:pickup_location] %></td>
								<td><%= item[:hold_date] %></td>
								<td>Aleph</td>
							  </tr>
							<% end %>
						<% end %>
						
<!-- Do the same for ILL books here -->
						</table></br>
						

				</div>
				
				<div class="tab-pane" id="books">
					<div>
						<h2>Checked out books</h2>
						<table class="table table-striped table-bordered no-table-hover table-condensed dataTable no-footer">
						  <tr>
							<th>Title</th>
							<th>Author</th> 
							<th>Due Date</th>
							<th>System</th>
						  </tr>
						<% @patron.borrowed_items.each do |item| %>
							  <tr>
								<td><%= item[:title] %></td>
								<td><%= item[:author] %></td> 
								<td><%= item[:due_date] %></td>
								<td>Aleph</td>
							  </tr>
						<% end %>
						<% @patron.ill_checked_out_items.each do |item| %>
							  <tr>
								<td><%= item[:title] %></td>
								<td><%= item[:author] %></td> 
								<td><%= item[:due_date] %></td>
								<td>ILLiad</td>
							  </tr>
						<% end %>
						</table></br>						
					</div>
					<div>
						<h2>Pending requests</h2>
						<table class="table table-striped table-bordered no-table-hover table-condensed dataTable no-footer">
						  <tr>
							<th>Title</th>
							<th>Author</th> 
							<th>Hold Date</th>
							<th>System</th>
						  </tr>
						<% @patron.hold_items.each do |item| %>
							<% if !item[:on_hold_flag] %>

							  <tr>
								<td><%= item[:title] %></td>
								<td><%= item[:author] %></td> 
								<td><%= item[:hold_date] %></td>
								<td>Aleph</td>
							  </tr>
							<% end %>
						<% end %>
						<% @patron.ill_pending_items.each do |item| %>
							  <tr>
								<td><%= item[:title] %></td>
								<td><%= item[:author] %></td>
								<td></td>
								<td>ILLiad</td>								 
							  </tr>
						<% end %>
						</table>
					</div>
				</div>
				
				<div class="tab-pane" id="articles"><h2>Scanned Articles and Book Chapters</h2>
					<div>
						<table class="table table-striped table-bordered no-table-hover table-condensed dataTable no-footer">
						  <tr>
							<th>Journal</th>
							<th>Artiicle</th> 
							<th>Link</th>
						  </tr>
						<% @patron.ill_available_web_items.each do |item| %>
							  <tr>
								<td><%= item[:journal_title] %></td>
								<td><%= item[:article_title] %></td>
								<td></td>
							  </tr>
						<% end %>
						</table>
						</br>
					</div>						
				</div>
				
				<div class="tab-pane" id="reserves">
					<h2>Course Reserves</h2>
				</div>
				
				<div class="tab-pane" id="curatend">
					<h2>CurateND</h2>
					<p><a href="https://curate.nd.edu/catalog?f[depositor_tesim][]=<%= @patron.netid %>&utf8=✓" target=_blank>My Curate items</a></p>
				</div>
				
				<div class="tab-pane" id="more">
					<h2>More?!</h2>
					<ul>
						<li>OSF</li>
						<li>Metrics/Altmetrics</li>
						<li>Saved books and articles from Primo</li>
						<li>Refworks</li>
						<li>Library resource recommendations</li>
						<li>What else?</li>
					</ul>	
				</div>
