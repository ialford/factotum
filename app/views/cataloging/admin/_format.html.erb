

<div class="row">
	<div class="span6 offset1">

		<table class="table table-condensed">
			<thead>
			<tr class="headings">
				<th>Format</th>
				<th></th>
				<th></th>
			</tr>
			</thead>

			<tbody>

				<% formats.each do |format| %>
					<tr>
						<td class='span4'><%= format.name %></td>
						<td class='span1'><%= link_to "Edit", edit_cataloging_admin_format_path(format.id), :class => "btn btn-small", "data-toggle" => "modal", "data-target" => "#genericModal" %></td>
						<td class='span1'><%= button_to "Delete", cataloging_admin_format_path(format.id), :class => 'btn btn-small', :method => :delete, :confirm => "Are you sure you wish to delete the format: #{format.name}?" %></td>
					</tr>
				<% end %>

			</tbody>
		</table>


	</div>
	
	<div class="span5"></div>
	
</div>				
