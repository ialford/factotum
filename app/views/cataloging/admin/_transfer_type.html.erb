

<div class="row">
	<div class="span6 offset1">

		<table class="table table-condensed">
			<thead>
			<tr class="headings">
				<th>Transfer From</th>
				<th>To</th>
				<th></th>
				<th></th>
			</tr>
			</thead>

			<tbody>

				<% transfer_types.each do |transfer_type| %>
					<tr>
						<td class='span2'><%= transfer_type.from_location.name %></td>
						<td class='span2'><%= transfer_type.to_location.name %></td>
						<td class='span1'><%= link_to "Edit", edit_cataloging_admin_transfer_type_path(transfer_type.id), :class => "btn btn-small", "data-toggle" => "modal", "data-target" => "#genericModal" %></td>
						<td class='span1'><%= button_to "Delete", cataloging_admin_transfer_type_path(transfer_type.id), :class => 'btn btn-small', :method => :delete, :confirm => "Are you sure you wish to delete the transfer type: #{transfer_type}?", "data-toggle" => "button" %></td>
					</tr>
				<% end %>

			</tbody>
		</table>


	</div>
	
	<div class="span5"></div>
	
</div>				
