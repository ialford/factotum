

<div class="row">
	<div class="span6 offset1">

		<table class="table table-condensed">
			<thead>
			<tr class="headings">
				<th>Special Procedure Types</th>
				<th></th>
				<th></th>
			</tr>
			</thead>

			<tbody>

				<% special_procedure_types.each do |special_procedure_type| %>
					<tr>
						<td class='span4'><%= special_procedure_type.name %></td>
						<td class='span1'><%= link_to "Edit", edit_cataloging_admin_special_procedure_type_path(special_procedure_type.id), :class => "btn btn-small", "data-toggle" => "modal", "data-target" => "#genericModal" %></td>
						<td class='span1'><%= button_to "Delete", cataloging_admin_special_procedure_type_path(special_procedure_type.id), :class => 'btn btn-small', :method => :delete, :confirm => "Are you sure you wish to delete the special procedure: #{special_procedure_type.name}?" %></td>
					</tr>
				<% end %>

			</tbody>
		</table>


	</div>
	
	<div class="span5"></div>
	
</div>				
