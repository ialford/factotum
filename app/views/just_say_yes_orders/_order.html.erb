<h2><%= order.title %></h2>

<p>
  <% [:selector, ["Fund", :selected_fund], :price_code, :price, :electronic_resource, ["Cataloging Location", :selected_cataloging_location], :requester, :title, ["Format", :selected_format], ["Author", :display_author], :publisher, :publication_year, ["OCLC number", :oclc_number], ["ISBN", :isbn], ["Link", :link_source]].each do |field| %>
    <%
    if field.is_a?(Array)
      caption = field[0]
      field = field[1]
    else
      caption = field.to_s.humanize
    end 
    %>
    <% if order.send(field).present? %>
      <strong><%= caption %>:</strong> <%= order.send(field) %><br>
    <% end %>
  <% end %>
</p>
<% if order.additional_details.present? %>
  <p>
    <strong>Additional Details:</strong><br>
    <% order.additional_details.split("\n").each do |line| %>
      <%= line %><br>
    <% end %>
  </p>
<% end %>

<p>
  <strong>Submitted by:</strong> <%= order.creator.to_s %> on <%= order.created_at.strftime("%m/%d/%Y at %I:%M%p") %>
</p>