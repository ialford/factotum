<% directory_menu %>

<% breadcrumb([link_to('Staff Directory', directory_root_path), "Employees" ]) %>

<% content_for :content_title do %>
  <div class="page-header">
    <h1>Employee Listing
      <div class="pull-right">

        <% if @permission.current_user_can_see_retired_employees? %>
          <div class="pull-left">
            <%= form_tag({}, {:method => :get}) do %>
              <%= check_box_tag('include', value = 'retired', checked = @include_checked, options = {:onchange => 'this.form.submit();'}) %>
            <% end %>
          </div>
          <div class="pull-left small">Include Retired Employees</div>
        <% end %>


        <% if @permission.current_user_can_add_employee? %>
          <div class="pull-right">
            <%= link_to "Add New Employee", new_directory_admin_employee_path, :class => "btn btn-primary", "data-toggle" => "modal", "data-target" => "#directoryModal" %>
          </div>
        <% end %>

      </div>
    </h1>
  </div>
<% end %>

<div class="empTable">
  <table id="directory_employee_full_list" cellpadding="0" cellspacing="0" class="table table-striped table-bordered no-table-hover table-condensed" style="max-width:700px;">
    <thead>
      <tr>
        <th>Name</th>
        <th>Title</th>
        <th>Department</th>
        <th>Contact</th>
        <th>Address</th>
        <th>About</th>
      </tr>
    </thead>
    <tbody>
    <% @employees.each do |employee| %>
      <%= render partial: 'employee_row', locals: { employee: employee} %>
    <% end %>
  </tbody>
  </table>
</div>





<!-- Modal -->
<div id="directoryModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

</div>