<% emp_row = EmployeeRow.new(employee) %>
<tr>
  <td>
    <p class="pull-left"><%= link_to employee, directory_employee_path(employee) %></p>
    <% if emp_row.show_subject_librarian_icon? %>
      <p class="pull-right"><a href="#" class="subject_librarian_info gold underline" data-content="<%= render emp_row.subject_librarian_subjects %>" data-placement="top" data-original-title="Subject Librarian">SL</a></p>
    <% end %>
  </td>
  <td>

    <%= truncate(emp_row.primary_title, length: 80, separator: ' ', omission: '... ') %>
  </td>
  <td>
    <% if emp_row.primary_department %>
      <%= link_to emp_row.primary_department.name, directory_department_path(emp_row.primary_department) %>
    <% end %>
  </td>
  <td>
    <%= mail_to emp_row.primary_email %>
    <br />
    <%= emp_row.primary_phone %>
  </td>
  <td>
    <% emp_row.addresses.each do | a | %>
      <%= a.is_primary? ? a.contact_information : '' %>
    <% end %>
  </td>
  <td>
    <%= emp_row.about_text %>
  </td>
</tr>
