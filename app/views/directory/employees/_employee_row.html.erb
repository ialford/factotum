<% emp_row = EmployeeRow.new(employee) %>
<tr name="<%= emp_row.display_name.slice(0) %>">
  <td>
    <p class="pull-left large"><%= link_to employee, directory_employee_path(employee) %></p>
    <% if emp_row.show_subject_librarian_icon? %>
      <p class="pull-right"><a href="#" class="subject_librarian_info gold underline" data-content="<%= render emp_row.subject_librarian_subjects %>" data-placement="top" data-original-title="Subject Librarian">SL</a></p>
    <% end %>
  </td>
  <td>
    <%= !emp_row.primary_title.blank? ? emp_row.primary_title.gsub(/,.+/, '').truncate(40, separator: ' ', omission: '...') : '' %>
  </td>
  <td>
    <% if emp_row.primary_department %>
      <%= link_to truncate(emp_row.primary_department.name, length: 35, separator: ' ', omission: '... '), directory_department_path(emp_row.primary_department) %>
    <% end %>
  </td>
  <td>
    <% if emp_row.primary_address_information %>
      <%= emp_row.primary_address_information.contact_information.gsub(/Library/, '') %>
    <% end %>
  </td>
  <td>
    <span class="email"><%= mail_to emp_row.primary_email %></span>
    <span class="phone"><%= emp_row.primary_phone %></span>
  </td>
  <td>
    <%= emp_row.about_text %>
  </td>
</tr>
