<% directory_menu %>

<% breadcrumb([link_to('Staff Directory', directory_root_path), "Departments" ]) %>

<% content_for :content_title do %>
  <div class="page-header"><h1>Departments</h1></div>
<% end %>

<div class="deptTable">
  <table id="directory_department_full_list" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered no-table-hover table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Homepage</th>
        <th>Head</th>
        <th>Contact</th>
        <th>Address</th>
      </tr>
    </thead>
    <tbody>
    <% @all_departments.each do |department| %>
      <%= render partial: 'department_row', locals: { department: department} %>
    <% end %>
  </tbody>
  </table>
</div>
