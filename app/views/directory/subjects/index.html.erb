<% directory_menu %>

<% breadcrumb([link_to('Staff Directory', directory_root_path), "Subject Areas" ]) %>

<% content_for :content_title do %>
  <div class="page-header"><h1>Subject Areas</h1></div>
<% end %>

<div class="subjTable">
  <table id="directory_subject_full_list" icellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Librarian</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Address</th>
      </tr>
    </thead>
    <tbody>
    <% @subjects.each do |subject| %>
      <%= render partial: 'subject_row', locals: { subject: subject} %>
    <% end %>
  </tbody>
  </table>
</div>
