
<% set_body_class('directory-page') %>

<% form_view = OrganizationalUnitView.new(@organizational_unit) %>

<% breadcrumb([link_to('Employee Directory', directory_path), "Add #{form_view.unit_type_display}" ]) %>

<% content_for :content_title do %>
    <div class="page-header"><h1>Add <%= form_view.unit_type_display %></h1></div>
<% end %>


<%= simple_form_for @organizational_unit, as: :directory_organizational_unit,
	:url => { :controller => "organizational_units", :action => "create" }, html: {class: "form-horizontal"} do |f| %>

	<%= render :partial => 'form', locals: {f: f, form_view: form_view} %>


<% end %>
