
<div class="row">
    <div class="span10">


        <div class="directory highlight">
        <span class="label"><strong>Add <%= @employee.first_last %> To: </strong></span>

        <%= link_to "Department", directory_admin_employee_new_unit_path(@employee, type: 'DirectoryDepartment'), :class => "btn btn-small", "data-toggle" => "modal", "data-target" => "#directoryModal" %>
        <%= link_to "Library Committee", directory_admin_employee_new_unit_path(@employee, type: 'DirectoryLibraryCommittee'), :class => "btn btn-small", "data-toggle" => "modal", "data-target" => "#directoryModal" %>
        <%= link_to "University Committee", directory_admin_employee_new_unit_path(@employee, type: 'DirectoryUniversityCommittee'), :class => "btn btn-small", "data-toggle" => "modal", "data-target" => "#directoryModal" %>
        </div>

        <br /><br />


        <% if @employee.employee_units.departments %>
        <table class="table table-condensed no-table-hover">
            <tr>
                <th class="span4">Departments</th>
                <th class="span4">Title</th>
                <th class="span1"></th>
                <th class="span1"></th>
            </tr>
            <%= render partial: "/directory/admin/employees/employee_unit_row", collection: @employee.employee_units.departments %>
        </table>
        <% end %>

        <br />
        <br />


        <% if @employee.employee_units.library_committees %>
        <table class="table table-condensed no-table-hover">
            <tr>
                <th class="span8">Library Committees</th>
                <th class="span1"></th>
                <th class="span1"></th>
            </tr>
            
            <%= render partial: "/directory/admin/employees/employee_unit_row", collection: @employee.employee_units.library_committees %>
        </table>
        <% end %>

        <br />
        <br />



        <% if @employee.employee_units.university_committees %>
        <table class="table table-condensed no-table-hover">
            <tr>
                <th class="span8">University Committees</th>
                <th class="span1"></th>
                <th class="span1"></th>
            </tr>
            
            <%= render partial: "/directory/admin/employees/employee_unit_row", collection: @employee.employee_units.university_committees %>

        </table>
        <% end %>

        
        <br />
        <br />



    </div>
    <div class="span2"></div>
</div>
