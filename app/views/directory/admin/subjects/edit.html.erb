
<% content_for :modal_title do %>
Edit Subject
<% end %>


<%= form_for @subject, :url => directory_admin_subject_path(@subject), html: {:class => 'form-horizontal directory_form', :div_for_content => 'div_subject' } do |f| %>

  

  <div class="modal-body">
    <%= render :partial => 'form', locals: {f: f} %>
  </div>



  <div class="modal-footer">
    <%= f.submit "Update Subject", :class => 'btn btn-primary' %>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>  

<% end %>
