<% form_view = ContactInformationView.new(@contact_information) %>

<% content_for :modal_title do %>
Add employee contact information
<% end %>


<%= form_for @contact_information, as: :directory_contact_information, :url => polymorphic_path([@contactable, @contact_information]), html: {:class => 'form-horizontal directory_form', :div_for_content => 'div_contact_information' } do |f| %>

  <%= render 'form', locals: {f: f, form_view: form_view} %>

  <div class="modal-footer">
    <%= f.submit "Add Contact Info", :class => 'btn btn-primary' %>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>  

<% end %>

