<% content_for(:page_title) { "Programs and Units" } %>
<% content_for(:meta_description) { "Programs and Units Listing for the Hesburgh Libraries, University of Notre Dame" } %>

<% directory_menu %>
<% breadcrumb([link_to('Employee Directory', directory_root_path), "Programs and Units" ]) %>

<% content_for :content_title do %>
  <div class="page-header">
      <h1>
        Programs and Units <span class="small"><%= link_to "Print View", params.merge(:print => "p") %></span>

        <% if @permission.current_user_can_add_organization? %>
          <div class="pull-right small">
            <%= link_to "Add New Department", new_directory_admin_department_path, :class => "btn btn-primary" %>
          </div>
        <% end %>

      </h1>
  </div>
<% end %>

<div class="deptTable">
  <table id="directory_department_full_list" cellpadding="0" cellspacing="0" class="table table-striped table-bordered no-table-hover table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Homepage</th>
        <th>Head</th>
        <th>Office</th>
        <th>Contact</th>
      </tr>
    </thead>
    <tbody>
    <% @all_departments.each do |department| %>
      <%= render partial: 'department_row', locals: { department: department} %>
    <% end %>
  </tbody>
  </table>
</div>
