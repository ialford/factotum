<form id="ejournal_search_form" action="<%= ejournal_path(:search) %>" method="get">
  <input type="hidden" name="stats_search_type" value="ejournal_search" />
  <fieldset>
    
    <span id="ejournal_search_template">
      <%= select_tag(:search_type, options_for_select(["Title keywords", "Title begins with", "Exact title", "ISSN", "Publisher/Provider"]), :class => "ejournal_advanced span3")%>
      <input class="srch-box long ejournal_keywords" type="text" name="query" value="" placeholder="Find a specific journal" />
    </span>
    <button type="submit" class="btn">Search</button>
  </fieldset>
</form>
<div class="ejournal_advanced">
  
</div>
<ul class="extra-links">
  <li><a href="#" id="ejournal_advanced_link" class="ejournal_simple">Advanced search</a></li>
  <li class="ejournal_advanced">All e-Journals: 
    <% ("A".."Z").each do |letter| %>
      <%= link_to(letter, ejournal_search_path(:starts_with => letter)) %>
    <% end %>
    <%= link_to("0-9", ejournal_search_path(:starts_with => "0-9")) %>
  </li>
