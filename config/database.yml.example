##########################################
# Shared settings
##########################################

mysql_settings: &mysql_settings
  adapter: mysql2
  pool:    5
  timeout: 5000

##########################################
# Environments
##########################################

development:
  <<: *mysql_settings
  database: factotum_development
  username: root
  
ddw_development:
  adapter: nulldb

test: &test
  <<: *mysql_settings
  database: factotum_test
  username: root

ddw_test:
  adapter: nulldb

pre_production:
  <<: *mysql_settings
  database: factotum_pprd
  host:     dbpprd.library.nd.edu
  username: NOT_STORED_IN_VERSION_CONTROL
  password: NOT_STORED_IN_VERSION_CONTROL

ddw_pre_production:
  <<: *mysql_settings
  database: ddw_pprd
  host:     dbpprd.library.nd.edu
  username: NOT_STORED_IN_VERSION_CONTROL
  password: NOT_STORED_IN_VERSION_CONTROL

production:
  <<: *mysql_settings
  database: factotum_prod
  host:     dbprod.library.nd.edu
  username: NOT_STORED_IN_VERSION_CONTROL
  password: NOT_STORED_IN_VERSION_CONTROL

ddw_production:
