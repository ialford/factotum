source 'http://rubygems.org'

gem 'rails', '3.1.0'

gem 'capistrano', '~> 2.8.0'
gem 'exception_notification'
gem 'jquery-rails'
gem 'json'
gem 'mechanize'
gem 'mysql2'
gem 'simple_form'
