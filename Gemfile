  gem 'sass-rails', '  ~> 3.1.0'
  gem 'coffee-rails', '~> 3.1.0'
  gem 'uglifier'
end

group :test, :development do
  gem 'capybara'
  gem 'cucumber-rails'
  gem 'database_cleaner'
  gem 'email_spec'
  gem 'factory_girl_rails'
  gem 'rspec-rails'
  gem 'ruby-debug'
end
